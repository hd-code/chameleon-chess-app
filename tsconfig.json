{
  "include": [ "src", "index.ts" ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],
    
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react-native",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
