{
  "name": "chameleon-chess-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "postinstall": "npm run pod",
    "android:build": "react-native run-android",
    "ios": "npm run iPad; npm run iPhone; open -a 'Simulator'; npm start",
    "ios:build": "npm run iPad:build; npm run iPhone:build",
    "iPad": "xcrun simctl boot 'iPad Air (3rd generation)'",
    "iPhone": "xcrun simctl boot 'iPhone 8'",
    "iPad:build": "react-native run-ios --simulator 'iPad Air (3rd generation)'",
    "iPhone:build": "react-native run-ios --simulator 'iPhone 8'",
    "pod": "cd ios && pod install",
    "logic": "rm -rf node_modules/chameleon-chess-logic && cp -R ../chameleon-chess-logic node_modules"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.2",
    "chameleon-chess-logic": "git+https://github.com/hd-code/chameleon-chess-logic.git#v1",
    "react": "^16.10.2",
    "react-native": "^0.61.2"
  },
  "devDependencies": {
    "@types/react": "^16.9.5",
    "@types/react-native": "^0.60.22",
    "react-native-cli": "^2.0.1",
    "typescript": "^3.6.3"
  }
}
